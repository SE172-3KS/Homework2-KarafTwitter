<?xml version="1.0" encoding="UTF-8"?>
<web-app
    version="2.5"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    >
	<!-- This is only here because Maven requires it to make a war. -->
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>org.threeks.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>org.threeks.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserTimelineServlet</servlet-name>
        <servlet-class>org.threeks.UserTimelineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTweetsServlet</servlet-name>
        <servlet-class>org.threeks.SearchTweetsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrendLocationsServlet</servlet-name>
        <servlet-class>org.threeks.TrendLocationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFriendsServlet</servlet-name>
        <servlet-class>org.threeks.GetFriendsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeeFriendshipServlet</servlet-name>
        <servlet-class>org.threeks.SeeFriendshipServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetFollowersServlet</servlet-name>
        <servlet-class>org.threeks.GetFollowersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>Hello</servlet-name>
     	<url-pattern>/hello/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>HomeServlet</servlet-name>
     	<url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserTimelineServlet</servlet-name>
        <url-pattern>/userTimeline</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTweetsServlet</servlet-name>
        <url-pattern>/searchTweets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrendLocationsServlet</servlet-name>
        <url-pattern>/trendLocations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFriendsServlet</servlet-name>
        <url-pattern>/getFriends</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeeFriendshipServlet</servlet-name>
        <url-pattern>/seeFriendship</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetFollowersServlet</servlet-name>
        <url-pattern>/getFollowers</url-pattern>
    </servlet-mapping>
</web-app>
